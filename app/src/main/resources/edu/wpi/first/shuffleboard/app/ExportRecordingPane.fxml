<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<HBox fx:id="root" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.first.shuffleboard.app.ExportRecordingPaneController">
    <BorderPane>
        <top>
            <Label text="Files to Export" BorderPane.alignment="CENTER" styleClass="h5"/>
        </top>
        <center>
            <ListView fx:id="fileList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </BorderPane.margin>
                <placeholder>
                    <Label text="No files selected"/>
                </placeholder>
            </ListView>
        </center>
        <HBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </HBox.margin>
        <bottom>
            <GridPane BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Button maxWidth="90.0" mnemonicParsing="false" onAction="#addFiles" text="Add Files"/>
                <Button maxWidth="90.0" mnemonicParsing="false" onAction="#addDirectory" text="Add Directory" GridPane.columnIndex="1"/>
            </GridPane>
        </bottom>
    </BorderPane>
    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER"/>
    <BorderPane maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity">
        <top>
            <HBox alignment="CENTER" spacing="6.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </BorderPane.margin>
                <Label text="Export as"/>
                <ComboBox fx:id="formatDropdown" prefWidth="150.0" promptText="Choose format"/>
            </HBox>
        </top>
        <center>
            <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </BorderPane.margin>
                <TextField fx:id="destinationDirField" editable="false" promptText="Destination directory"/>
                <Label fx:id="changeDestinationLabel" text="Change" styleClass="link-label" onMouseClicked="#chooseDestinationDir"/>
            </VBox>
        </center>
        <HBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </HBox.margin>
        <bottom>
            <Button fx:id="exportButton" mnemonicParsing="false" onAction="#export" text="Export" BorderPane.alignment="CENTER" disable="${!controller.exportable}"/>
        </bottom>
    </BorderPane>
</HBox>
