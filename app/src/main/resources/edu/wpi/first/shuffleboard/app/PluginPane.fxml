<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.wpi.first.shuffleboard.app.PluginPaneController"
            fx:id="root">
    <padding>
        <Insets topRightBottomLeft="8"/>
    </padding>
    <center>
        <SplitPane fx:id="splitPane" minWidth="600" prefWidth="600">
            <TableView fx:id="pluginTable" editable="true" minWidth="300" prefWidth="300">
                <columns>
                    <TableColumn text="Plugin" fx:id="nameColumn" editable="false"/>
                    <TableColumn text="Loaded" fx:id="loadedColumn" editable="true"/>
                    <TableColumn text="Version" fx:id="versionColumn" editable="false"/>
                </columns>
            </TableView>
            <TextArea fx:id="descriptionArea" editable="false" wrapText="true" minWidth="200" prefWidth="200"/>
        </SplitPane>
    </center>
    <bottom>
        <StackPane alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8"/>
            </padding>
            <Button text="Load plugin" onAction="#loadPlugin"/>
        </StackPane>
    </bottom>
</BorderPane>
