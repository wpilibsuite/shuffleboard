<?xml version="1.0" encoding="UTF-8"?>

<?import edu.wpi.first.shuffleboard.components.NetworkTableTree?>
<?import edu.wpi.first.shuffleboard.components.WidgetPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" maxHeight="Infinity" maxWidth="Infinity" stylesheets="/edu/wpi/first/shuffleboard/main.css"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.first.shuffleboard.MainWindowController">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem onAction="#close" text="Close"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <WidgetPane fx:id="widgetPane" hgap="8" vgap="8" numColumns="8" numRows="6">
            <properties dropTarget="true"/>
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
        </WidgetPane>
    </center>
    <left>
        <VBox>
            <NetworkTableTree fx:id="networkTables" showRoot="false" prefHeight="80" prefWidth="400" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="No tables"/>
                </placeholder>
            </NetworkTableTree>
        </VBox>
    </left>
</BorderPane>
