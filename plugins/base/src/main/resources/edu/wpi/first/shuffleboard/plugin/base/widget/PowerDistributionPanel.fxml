<?xml version="1.0" encoding="UTF-8"?>

<?import edu.wpi.first.shuffleboard.api.components.LinearIndicator?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.wpi.first.shuffleboard.plugin.base.widget.PowerDistributionPanelWidget"
      fx:id="root"
      spacing="16"
      prefWidth="400" prefHeight="128">
    <padding>
        <Insets topRightBottomLeft="8"/>
    </padding>
    <!-- Left side, channels 0-7 -->
    <!-- These are reversed (max on left, min on right) to make the indicator bars appear to originate from the PDP -->
    <VBox spacing="8" nodeOrientation="RIGHT_TO_LEFT">
        <VBox spacing="4">
            <LinearIndicator fx:id="channel0" min="0" max="60"/>
            <LinearIndicator fx:id="channel1" min="0" max="60"/>
            <LinearIndicator fx:id="channel2" min="0" max="60"/>
            <LinearIndicator fx:id="channel3" min="0" max="60"/>
        </VBox>
        <VBox spacing="4">
            <LinearIndicator fx:id="channel4" min="0" max="30"/>
            <LinearIndicator fx:id="channel5" min="0" max="30"/>
            <LinearIndicator fx:id="channel6" min="0" max="30"/>
            <LinearIndicator fx:id="channel7" min="0" max="30"/>
        </VBox>
    </VBox>
    <ImageView>
        <Image url="@pdp-icon-plain.svg"/>
    </ImageView>
    <!-- Right side, channels 8-15 -->
    <VBox spacing="8">
        <VBox spacing="4">
            <LinearIndicator fx:id="channel12" min="0" max="60"/>
            <LinearIndicator fx:id="channel13" min="0" max="60"/>
            <LinearIndicator fx:id="channel14" min="0" max="60"/>
            <LinearIndicator fx:id="channel15" min="0" max="60"/>
        </VBox>
        <VBox spacing="4">
            <LinearIndicator fx:id="channel8" min="0" max="30"/>
            <LinearIndicator fx:id="channel9" min="0" max="30"/>
            <LinearIndicator fx:id="channel10" min="0" max="30"/>
            <LinearIndicator fx:id="channel11" min="0" max="30"/>
        </VBox>
    </VBox>
    <LinearIndicator fx:id="voltage" orientation="VERTICAL" min="0" max="15"/>
    <LinearIndicator fx:id="totalCurrent" orientation="VERTICAL" min="0" max="720"/>
</HBox>
